{
   "extends": "eslint:recommended",
   "parserOptions": {
       "ecmaVersion": 8,
       "sourceType": "script",
       "ecmaFeatures": {
           "jsx": false,
           "experimentalObjectRestSpread": false
       }
   },
   "env": {
       "node": true
   },
   "rules": {
       "indent": [
           "error",
           3
       ],
       "handle-callback-err": [
           "error"
       ]
   }
}